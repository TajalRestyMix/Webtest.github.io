!/bin/bash

# Este script crea la estructura de directorios y archivos para el sitio web
# 'TAJAL Restaurante & Mixología', optimizada para trabajar con GitHub.

# Define el nombre del directorio principal del proyecto
PROJECT_NAME="TAJAL-Restaurante"

echo "Creando la estructura de ficheros para el proyecto: $PROJECT_NAME"

# Crear el directorio principal del proyecto
mkdir -p "$PROJECT_NAME"
cd "$PROJECT_NAME"

# Crear directorios principales
mkdir -p public
mkdir -p public/css
mkdir -p public/js
mkdir -p public/img
mkdir -p .github/workflows # Opcional, para GitHub Actions

echo "Directorios creados."

# Crear archivos principales vacíos o con contenido básico
touch README.md
touch .gitignore
# touch .github/workflows/main.yml # Si planeas usar GitHub Actions

echo "Archivos README.md y .gitignore creados."

# --- Contenido del archivo public/index.html ---
cat << EOF > public/index.html
